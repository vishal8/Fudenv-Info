<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:scaleType="centerCrop"
        android:src="@drawable/fudenv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/text_margin_bottom"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_marginTop="@dimen/text_margin_top"
        android:layout_marginRight="@dimen/text_margin_right"
        android:text="@string/desc"
        android:textSize="@dimen/desc_text_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/text_margin_bottom"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:textSize="@dimen/text_text_size"
        android:autoLink="phone"
        android:text="@string/phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/text_margin_bottom"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:textSize="@dimen/text_text_size"
        android:autoLink="web"
        android:text="@string/website"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/text_margin_bottom"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_marginRight="@dimen/text_margin_right"
        android:textSize="@dimen/text_text_size"
        android:text="@string/address" />

</LinearLayout>